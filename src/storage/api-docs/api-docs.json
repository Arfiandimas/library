        "/api/authors/{id}/books": {
            "get": {
                "tags": [
                    "Author"
                ],
                "summary": "Get books by author ID",
                "description": "Fetch all books associated with a specific author by their ID",
                "operationId": "authorBooks",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the author whose books to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Books retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "text": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "method": {
                                            "type": "string",
                                            "example": "authorBooks"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
