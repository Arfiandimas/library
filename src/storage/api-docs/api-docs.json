                                                    },
                                                    "publish_date": {
                                                        "type": "string",
                                                        "format": "date",
                                                        "example": "1992-04-20"
                                                    },
                                                    "author_id": {
                                                        "type": "integer",
                                                        "example": 5
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
